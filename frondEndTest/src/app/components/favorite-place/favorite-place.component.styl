@import '../../../assets/styles/config/colors.styl'
@import '../../../assets/styles/general.styl'
.favorite_places
    .widget-card
        border-radius 30px
        min-height 140px
        height 140px
        box-shadow 0px 3px 3px 0px $color_grey_white
        transition transform .2s
        &:hover
            transform scale(1.1)
    .img-city
        width 90px
        max-width 90px
        margin-right 20px
        height 90px
        max-height 90px
        border-radius 50px
        img
            height 100%
            width 100%
    .widget-headquarter-name
        width 270px
        color $color_violet
        .mat-icon
            font-size 20px
        .widget-headquarter-degrees
            .mat-icon
                font-size 12px
    .text-data
        span
            font-size 14px
            color $color_light_grey
    .text-description
        width 100%
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        font-size 14px
        span
            color #ababab
    .icon-wind
        color $color_pink
    .icon-humedity
        color $color_light_blue
    .icon-temp
        color $color_yellow
    .container-icon
        display flex
        position relative
        width 100px
        .container-icon-weather
            margin-left auto
            position absolute
            right 0
            top 0px
            bottom 180px
            font-size 80px
            display flex
            align-items center
    .icon-weather-rain
        color $color_light_blue